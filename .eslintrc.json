{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "globals": {
        "process": true
    },
    "overrides": [
        {
            "env": {
                "node": true,
                "browser": true,
                "es6": true
            },
            "files": [
                ".eslintrc.{js,cjs}"
            ],
            "parserOptions": {
                "sourceType": "script"
            }
        }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks",
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "spaced-comment": "error",
        "quotes": [
            "error",
            "double"
        ],
        "no-duplicate-imports": "error"
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}